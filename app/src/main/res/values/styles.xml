<resources>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar"/>

    <style name="AppCompatMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="HeaderBar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppLoginTheme" parent="Theme.AccountKit">
        <item name="com_accountkit_text_color">@color/colorPrimaryText</item>
        <item name="com_accountkit_primary_color">@color/colorPrimary</item>
        <item name="com_accountkit_input_accent_color">@color/colorAccent</item>
        <item name="com_accountkit_secondary_text_color">@color/colorSecondaryText</item>
        <item name="com_accountkit_status_bar_color">@color/colorPrimaryDark</item>
    </style>


</resources>
